{
  "compilerOptions": {
    "target": "es2020",
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "node_modules/@types"]
  },
  "include": ["src"]
}
